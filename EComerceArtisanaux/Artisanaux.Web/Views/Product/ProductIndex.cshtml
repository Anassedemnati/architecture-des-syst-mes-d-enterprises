@model IEnumerable<Artisanaux.Web.Models.ProductDto>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product list</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-primary"><i class="fas fa-plus"></i>Create new product</a>
            
        </div>
        
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="ProductDetails" asp-route-id="@item.ProductId">@item.ProductName</a>
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        <a asp-action="ProductEdit" asp-route-id="@item.ProductId" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    </td>
                    <td>
                        <a asp-action="ProductDelete" asp-route-id="@item.ProductId" class="btn btn-danger"><i class="fas fa-trash"></i></a>

                    </td>

                </tr>
            }
        </tbody>
    </table>
    
</div>